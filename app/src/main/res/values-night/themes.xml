<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->

        <item name="cardBackgroundColor">@color/cardBackgroundColorDarkTheme</item>
        <item name="backgroundColor">@color/backgroundColorDarkTheme</item>
        <item name="iconTint">@color/iconTintDarkTheme</item>
        <item name="tabIconTint">@color/customAlertDialogBackgroundColorDarkTheme</item>
    </style>

    <style name="Theme.Notes.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundColor">@color/bottomNavViewBackgroundColorDarkTheme</item>
        <item name="iconTint">@color/bottomNavViewIconTintDarkTheme</item>
    </style>

    <style name="Theme.Notes.SplashLogo" parent="">
        <item name="tint">@color/colorAccentDarkTheme</item>
    </style>

    <style name="Widget.Notes.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDarkDarkTheme</item>
    </style>

    <style name="Widget.Notes.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textColorSubtitleDarkTheme</item>
    </style>

    <style name="Widget.Notes.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimaryDarkDarkTheme</item>
        <item name="tint">@color/white</item>
<!--        <item name="fabSize">normal</item>-->
    </style>

    <style name="Widget.Notes.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <!--        <item name="background">?attr/cardBackgroundColor</item>-->
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="TextAppearance.Notes.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widgets.Notes.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Notes.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="boxBackgroundMode">outline</item>
        <!--        <item name="android:textColorHint">?attr/colorPrimaryDark</item>-->
    </style>

    <style name="Widget.Notes.TextInputEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:textColorHint">?attr/colorPrimaryDark</item>-->
    </style>

    <style name="TextAppearance.Notes.TitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Notes.TitleText1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Notes.TitleText2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Notes.TitleText2.Profile" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Notes.TitleText2.Tablet" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Notes.SubtitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorSubtitleDarkTheme</item>
    </style>

    <style name="Widget.Note.ImageView" parent="">
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.Note.ImageView.Profile" parent="">
        <item name="tint">@color/iconTintDarkTheme</item>
        <item name="alpha">0.7</item>
    </style>

    <style name="Widget.Note.ImageView.Todo" parent="">
        <item name="tint">@color/iconTintDarkTheme</item>
    </style>

    <!--    <style name="Theme.Notes.NoActionBar">-->
    <!--        <item name="windowActionBar">false</item>-->
    <!--        <item name="windowNoTitle">true</item>-->
    <!--    </style>-->

    <style name="boldText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Notes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>