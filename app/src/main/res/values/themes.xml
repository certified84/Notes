<resources>
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->

        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="iconTint">@color/iconTint</item>
        <item name="tabIconTint">@color/customAlertDialogBackgroundColor</item>
    </style>

    <style name="Theme.Notes.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundColor">@color/bottomNavViewBackgroundColor</item>
        <item name="iconTint">@color/bottomNavViewIconTint</item>
    </style>

    <style name="Theme.Notes.SplashLogo" parent="">
        <item name="tint">@color/colorAccent</item>
    </style>

    <style name="Widget.Notes.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Widget.Notes.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.Notes.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="tint">?attr/cardBackgroundColor</item>
    </style>

    <style name="Widget.Notes.FloatingActionButton.Others" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="tint">?attr/cardBackgroundColor</item>
    </style>

    <style name="Widget.Notes.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundColor">?attr/cardBackgroundColor</item>
        <item name="itemIconTint">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Notes.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/textColorSubtitle</item>
    </style>

    <style name="Widgets.Notes.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Notes.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <!--        <item name="android:textColorHint">?attr/colorPrimaryDark</item>-->
    </style>

    <style name="Widget.Notes.TextInputEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <!--        <item name="android:textColorHint">?attr/colorPrimaryDark</item>-->
    </style>

    <style name="TextAppearance.Notes.TitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorTitle</item>
    </style>

    <style name="TextAppearance.Notes.TitleText1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorTitle</item>
    </style>

    <style name="TextAppearance.Notes.TitleText2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="customNumberPickerStyle">
        <item name="np_dividerColor">?attr/colorPrimary</item>
        <item name="np_orientation">horizontal</item>
        <item name="np_selectedTextColor">@color/black</item>
    </style>

    <style name="TextAppearance.Notes.TitleText2.Profile" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightBlack</item>
    </style>

    <style name="TextAppearance.Notes.TitleText2.Tablet" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Notes.SubtitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorSubtitle</item>
    </style>

    <style name="Widget.Note.ImageView" parent="">
        <item name="tint">@color/black</item>
    </style>

    <style name="Widget.Note.ImageView.Profile" parent="">
        <item name="tint">?attr/colorAccent</item>
    </style>

    <style name="Widget.Note.ImageView.Todo" parent="">
        <item name="tint">?attr/colorAccent</item>
    </style>

<!--    <style name="Theme.Notes.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name="boldText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Theme.Notes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>